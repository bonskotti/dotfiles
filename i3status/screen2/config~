general {
	output_format = "i3bar"
	colors = true
	interval = 5
}

order += "ethernet enp1s0"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "time"
order += "volume master"

ethernet enp1s0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by 		mcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
        hide_if_equals_localtime = true
}

cpu_temperature 0 {
        format = "T: %degrees °C"
        path = "/sys/devices/platform/coretemp.0/temp1_input"
}

memory {
        format = "%used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

disk "/" {
        format = "%free/%total"
}

read_file uptime {
        path = "/proc/uptime"
}

volume master {
	format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
	device = "default"
        mixer = "Master"
        mixer_idx = 0
}
